<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <!-- serial number of lot -->
        <t t-jquery=".receipt-orderlines >tr >td >t:eq(0)" t-operation="after">
            <t t-if="orderline.pack_lot_lines and orderline.pack_lot_lines.models">
                <t t-foreach="orderline.pack_lot_lines.models" t-as="lot_model">
                    <t t-if="lot_model">
                        <div class="pos-disc-font">
                            Lot/Serial: <t t-esc="lot_model['attributes']['lot_name']"/>
                        </div>
                    </t>
                </t>
            </t>
        </t>
        <!-- combo -->
        <t t-jquery=".receipt-orderlines >tr >td >t:eq(0)" t-operation="after">
            <t t-if="orderline.combo_items">
                <t t-foreach="orderline.combo_items" t-as="combo_item">
                    <div class="pos-disc-font">
                        <t t-esc="combo_item.product_id[1]"/> With qty:  <t t-esc="combo_item.quantity"/>
                    </div>
                </t>
            </t>
        </t>

        <t t-jquery=".receipt-change" t-operation="after">
            <!-- loyalty -->
            <table>
                <t t-if="order.plus_point">
                    <td class="pos-right-align point">
                        Plus point: + <t t-esc="order.plus_point"/>
                    </td>
                </t>
                <t t-if="order.redeem_point">
                    <td class="pos-right-align point">
                        Redeem point: - <t t-esc="order.redeem_point"/>
                    </td>
                </t>
            </table>
            <!-- order note -->
            <br />
            <div style='text-align:center'>
                <t t-esc="receipt.note" />
            </div>
            <!-- Signature -->
            <t t-if="order.signature">
                <table>
                    <tr>
                        <td>Signature:</td>
                        <td class="pos-right-align">
                            <img class="product-img signature"
                             t-att-src="widget.pos.get_order().get_signature() || ''"
                             style="max-height:400px;max-width:100px"
                        />
                        </td>
                    </tr>
                </table>
            </t>
        </t>
        <!-- multi variant -->
        <t t-jquery=".receipt-orderlines>tr>td:first-child" t-operation="append">
            <t t-if="orderline.variants">
                <t t-foreach="orderline.variants" t-as="variant">
                    <div class="pos-disc-font">
                        <left>
                            <t t-esc="variant.value_id[1]"/>
                            <t t-esc="widget.format_currency(variant.price_extra, 'Price extra')" />
                        </left>
                    </div>
                </t>
            </t>
        </t>
        <!-- tags -->
        <t t-jquery=".receipt-orderlines>tr>td:first-child" t-operation="append">
            <t t-if="orderline.tags">
                <t t-foreach="orderline.tags" t-as="tag">
                    <div class="pos-disc-font">
                        <left>
                            <span class='bus-info' t-att-data-id="tag.id">
                                <i class="fa fa-tag">
                                    <t t-esc="tag.name"/>
                                </i>
                            </span>
                        </left>
                    </div>
                </t>
            </t>
        </t>
    </t>

    <t t-name="daily_report_user_xml">
        <receipt align='center' width='40' value-thousands-separator='' >
            <h3>Daily report sale</h3>
            <t t-foreach='datas' t-as='data'>
                <div font='b'>
                    <t t-if='data.user'>
                        <div class='cashier'>
                            <div>---------------****-----------------</div>
                            <div><h3><t t-esc="user['display_name']" /></h3></div>
                        </div>
                    </t>
                </div>
                <br /><br />
                <div class='data.orderlines' line-ratio='0.6'>
                    <t t-foreach='orderlines' t-as='line'>
                        <line>
                            <left>
                                <t t-esc='line.product_id[1]' />
                                With qty:
                                <t t-esc='line.quantity' />
                            </left>
                            <right>
                                <value t-att-value-decimals='pos.currency.decimals'>
                                    <t t-esc='line.price_unit' />
                                </value>
                            </right>
                        </line>
                    </t>
                </div>
                <line><right>------***------</right></line>
                <line class='total' size='double-height'>
                    <left><pre>        TOTAL</pre></left>
                    <right><value t-att-value-decimals='pos.currency.decimals'><t t-esc='data.amount_total' /></value></right>
                </line>
                <line><right>------***------</right></line>
            </t>
        </receipt>
    </t>

    <t t-name="daily_report_user_html">
        <div class="pos-sale-ticket">
            <h3>Daily report sale</h3>
            <t t-foreach='datas' t-as='data'>
                <t t-if='data.user'>
                    <div class='cashier'>
                        <div>-------------------****---------------------</div>
                        <div><h3><t t-esc="user['display_name']" /></h3></div>
                    </div>
                </t>
                <br/>
                <br/>
                <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='50%' />
                        <col width='25%' />
                        <col width='25%' />
                    </colgroup>
                    <tr t-foreach="data.orderlines" t-as="line">
                        <td>
                            <t t-esc='line.product_id[1]' />
                        </td>
                        <td class="pos-right-align">
                            <t t-esc='line.qty' />
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(line.price_unit)"/>
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-total'>
                    <tr>
                        <td>Total:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(data.amount_total)"/>
                        </td>
                    </tr>
                </table>
            </t>
        </div>
    </t>

</templates>
