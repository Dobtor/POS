<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="schedule_refresh_call_log" model="ir.cron">
            <field name="name">POS auto refresh call log</field>
            <field name="model_id" ref="pos_retail.model_pos_call_log"/>
            <field name="state">code</field>
            <field name="code">model.refresh_call_logs()</field>
            <field name="interval_number">3</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="schedule_auto_process_invoice" model="ir.cron">
            <field name="name">POS auto to invoice</field>
            <field name="model_id" ref="pos_retail.model_pos_auto_invoice"/>
            <field name="state">code</field>
            <field name="code">model.auto_invoice()</field>
            <field name="interval_number">20</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>

