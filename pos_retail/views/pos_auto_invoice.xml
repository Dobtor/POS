<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="pos_auto_invoice_form" model="ir.ui.view">
            <field name="name">pos.auto.invoice.form</field>
            <field name="model">pos.auto.invoice</field>
            <field name="arch" type="xml">
                <form string="Orders waiting to invoice">
                    <sheet>
                        <group>
                            <field name="order_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pos_auto_invoice_tree" model="ir.ui.view">
            <field name="name">pos.auto.invoice.tree</field>
            <field name="model">pos.auto.invoice</field>
            <field name="arch" type="xml">
                <tree string="Orders waiting to invoice">
                    <field name="order_id"/>
                </tree>
            </field>
        </record>

        <record id="pos_auto_invoice_search" model="ir.ui.view">
            <field name="name">pos.auto.invoice.filter</field>
            <field name="model">pos.auto.invoice</field>
            <field name="arch" type="xml">
                <search string="Orders waiting to invoice">
                    <field name="order_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pos_auto_invoice">
            <field name="name">Orders waiting to invoice</field>
            <field name="res_model">pos.auto.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_pos_auto_invoice"
                  action="action_pos_auto_invoice"
                  parent="menu_master_data"
                  sequence="25"
        />

    </data>
</odoo>