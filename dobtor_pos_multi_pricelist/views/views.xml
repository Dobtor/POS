<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="act_discount_product_form" model="ir.actions.act_window">
    <field name="res_model">product.product.discount</field>
    <field name="view_type">form</field>
    <field name="name">Discount Product Setting</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="act_order_pricelist_form" model="ir.actions.act_window">
    <field name="res_model">pos.order.pricelist</field>
    <field name="view_type">form</field>
    <field name="name">Pos Order Pricelist Setting</field>
    <field name="view_mode">tree,form</field>
  </record>


  <menuitem id="discount_product_config" name="Discount Setting" action="act_discount_product_form" parent="point_of_sale.menu_point_config_product" sequence="10"/>
  <menuitem id="order_pricelist_config" name="Order Pricelist Setting" action="act_order_pricelist_form" parent="point_of_sale.menu_point_config_product" sequence="20"/>

  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.config_discount_product">
    <field name="name">DiscountSetting</field>
    <field name="model">product.product.discount</field>
    <field name="arch" type="xml">
      <form string="Discount Product Setting">
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name"/>
            </h1>
          </div>
          <group>
            <field name="product_id" domain="[('discount_type','=',True)]"/>
            <field name="paid_type"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.config_discount_product_tree">
    <field name="name">DiscountSetting Tree</field>
    <field name="model">product.product.discount</field>
    <field name="arch" type="xml">
      <tree string="Discount Product Setting">
        <field name="sequence" widget="handle"/>
        <field name="name"/>
        <field name="product_id" domain="[('discount_type','=',True)]"/>
        <field name="paid_type"/>
      </tree>
    </field>
  </record>


  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.order_pricelist_config_form">
    <field name="name">Order Pricelist Form</field>
    <field name="model">pos.order.pricelist</field>
    <field name="arch" type="xml">
      <form string="Pos Order Pricelist">
        <sheet>
          <group>
            <field name="name"/>
            <field name="discount_product"/>
            <field name="discount_rule"/>
            <!-- <field name="base_price"/> -->
            <!-- <field name="discounted_price"/> -->
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.order_pricelist_config_tree">
    <field name="name">Order Pricelist Tree</field>
    <field name="model">pos.order.pricelist</field>
    <field name="arch" type="xml">
      <tree string="Pos Order Pricelist">
        <field name="name"/>
        <field name="discount_rule"/>
        <!-- <field name="discounted_price"/> -->
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.order_pricelist_rule_tree">
    <field name="name">Order Pricelist rule Tree</field>
    <field name="model">pos.order.pricelist.rule</field>
    <field name="arch" type="xml">
      <tree string="Pos Order Pricelist rule">
        <field name="name"/>
        <field name="base_price"/>
        <field name="compute_price" string="Discount Rule"/>
        <field name="discount_price"/>
        <field name="percent_price"/>
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="dobtor_pos_multi_pricelist.order_pricelist_rule_form">
    <field name="name">Order Pricelist rule Form</field>
    <field name="model">pos.order.pricelist.rule</field>
    <field name="arch" type="xml">
      <form string="Pos Order Pricelist">
        <sheet>
          <group>
            <field name="name"/>
            <field name="base_price"/>
            <group>
              <group>
                <label for="compute_price" string="Compute Price"/>
                  <div>
                    <field name="compute_price" widget="radio"/>
                    <div attrs="{'invisible':[('compute_price', '!=', 'discount')]}">
                      <field name="discount_price" nolabel= "1" widget='monetary'/></div>
                    <div attrs="{'invisible':[('compute_price', '!=', 'percentage')]}">
                      <field name="percent_price" nolabel="1" class="oe_inline"/>%%
                  </div>
                </div>
              </group>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>


</odoo>
