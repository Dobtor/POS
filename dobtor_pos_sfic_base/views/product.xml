<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dobtor_pos_sfic_base_product_form_view" model="ir.ui.view">
            <field name="name">dobtor.pos.sfic.base.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attribute_value_ids']" position="after">
                    <field name="extra_attribute_value_ids" widget="many2many_tags" readonly="1" groups="product.group_product_variant"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>