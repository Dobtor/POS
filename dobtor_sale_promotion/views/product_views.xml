<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_template_promotion_form_view" model="ir.ui.view">
            <field name="name">product.template.promotion.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='description']" position="before">
                    <group string="Promotion" name="promotion">
                        <field name="is_promotion_product" />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
