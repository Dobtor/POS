<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_pricelist_item_extend_tree_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree.extend</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="variant_ids" groups="product.group_product_variant"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_item_extend_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form.extend</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group" position="before">
                    <group>
                        <field name="level_on" widget="radio"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='applied_on']/parent::group" position="inside">
                    <field name="variant_ids" widget="many2many_tags" attrs="{'invisible':[('applied_on', '!=', '02_variant_value')],'required':[('applied_on', '=', '02_variant_value')]}"/>
                </xpath>
                <xpath expr="//div[@class='oe_grey']" position="before">
                    <group attrs="{'invisible':[('level_on', '!=', 'order')]}">
                        <group>
                            <field name="base_on" widget="radio"/>
                        </group>
                    </group>
                    <separator string="Rule Item" attrs="{'invisible':[('level_on', '!=', 'order')]}"/>
                    <group attrs="{'invisible':['|',('base_on', '!=', 'range'),('level_on', '!=', 'order')]}">
                        <field name="range_based_ids">
                            <tree string="Rule Lines" editable="bottom">
                                <field name="start"/>
                                <field name="end"/>
                                <field name="based_on"/>
                                <field name="based_on_rebate" attrs="{'invisible':[('based_on', '!=', 'rebate')]}" />
                                <field name="based_on_percentage" attrs="{'invisible':[('based_on', '!=', 'percentage')]}" />
                            </tree>
                        </field>
                    </group>
                    <group attrs="{'invisible':['|',('base_on', '!=', 'combo_sale'),('level_on', '!=', 'order')]}">
                        <field name="combo_sale_ids">
                            <tree string="Rule Lines" editable="bottom">
                                <field name="applied_on"/>
                                <field name="product_id" attrs="{'invisible':[('applied_on', '!=', 'product')]}" />
                                <field name="variant_ids" widget="many2many_tags" attrs="{'invisible':[('applied_on', '!=', 'variant')]}" />
                                <field name="based_on"/>
                                <field name="based_on_price" attrs="{'invisible':[('based_on', '!=', 'price')]}" />
                                <field name="based_on_percentage" attrs="{'invisible':[('based_on', '!=', 'percentage')]}" />
                            </tree>
                        </field>
                    </group>
                </xpath>
                <xpath expr="//field[@name='compute_price']/parent::div/parent::group/parent::group" position="attributes">
                    <attribute name="attrs">{'invisible':[('level_on', '!=', 'line')]}</attribute>
                </xpath>
                <xpath expr="//group[@col='6']" position="attributes">
                    <attribute name="attrs">{'invisible':['|',('compute_price', '!=', 'formula'), ('level_on', '!=', 'line')]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_item_bogo_offer_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.bogo_offer</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group" position="before">
                    <group>
                        <field name="is_primary_key"/>
                    </group>
                </xpath>
                <xpath expr="//form" position="inside">
                    <group col="2" attrs="{'invisible':['|','|',('compute_price', '!=', 'bogo_sale'),('level_on', '!=', 'line')]}">
                        <field name="bogo_base" colspan="2" attrs="{'required':[('compute_price', '=', 'bogo_sale')]}"/>
                        <field name="order_by_pirce" widget="radio" attrs="{'required':[('compute_price', '=', 'bogo_sale')]}"/>
                    </group>
                    <group attrs="{'invisible':['|','|',('bogo_base', '!=', 'bxa_gya_free'),('compute_price', '!=', 'bogo_sale'),('level_on', '!=', 'line')]}">
                        <field name="bxa_gya_free_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gya_free_Bproduct_unit" class="oe_inline" />
                    </group>
                    <group attrs="{'invisible':['|','|',('bogo_base', '!=', 'bxa_gya_discount'),('compute_price', '!=', 'bogo_sale'),('level_on', '!=', 'line')]}">
                        <field name="bxa_gya_discount_ids">
                            <tree string="Rule Lines" editable="bottom">
                                <field name="buy_x"/>
                                <field name="based_on_percentage" />
                            </tree>
                        </field>
                    </group>
                    <group attrs="{'invisible':['|','|',('bogo_base', '!=', 'bxa_gyb_free'),('compute_price', '!=', 'bogo_sale'),('level_on', '!=', 'line')]}">
                        <field name="bxa_gyb_free_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_free_gift_base_on" widget="radio" />
                        <field name="bxa_gyb_free_products" class="oe_inline" attrs="{'invisible':[('bxa_gyb_free_gift_base_on', '!=', 'product')],'required':[('bogo_base', '=', 'bxa_gyb_free'), ('bxa_gyb_free_gift_base_on', '=', 'product')]}"/>
                        <field name="bxa_gyb_free_variant_ids" widget="many2many_tags" class="oe_inline" attrs="{'invisible':[('bxa_gyb_free_gift_base_on', '!=', 'variant')],'required':[('bogo_base', '=', 'bxa_gyb_free'), ('bxa_gyb_free_gift_base_on', '=', 'variant')]}"/>
                        <field name="bxa_gyb_free_Bproduct_unit" class="oe_inline"/>
                    </group>
                    <group attrs="{'invisible':['|','|',('bogo_base', '!=', 'bxa_gyb_discount'),('compute_price', '!=', 'bogo_sale'),('level_on', '!=', 'line')]}">
                        <field name="bxa_gyb_discount_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_discount_gift_base_on" widget="radio" />
                        <field name="bxa_gyb_discount_product" class="oe_inline" attrs="{'invisible':[('bxa_gyb_discount_gift_base_on', '!=', 'product')],'required':[('bogo_base', '=', 'bxa_gyb_discount'), ('bxa_gyb_discount_gift_base_on', '=', 'product')]}"/>
                        <field name="bxa_gyb_discount_variant_ids" class="oe_inline" widget="many2many_tags" attrs="{'invisible':[('bxa_gyb_discount_gift_base_on', '!=', 'variant')],'required':[('bogo_base', '=', 'bxa_gyb_discount'), ('bxa_gyb_discount_gift_base_on', '=', 'variant')]}"/>
                        <field name="bxa_gyb_discount_Bproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_discount_base_on" class="oe_inline" attrs="{'required':[('bogo_base', '=', 'bxa_gyb_discount')]}"/>
                        <field name="bxa_gyb_discount_fixed_price" class="oe_inline" attrs="{'invisible':[('bxa_gyb_discount_base_on', '!=', 'fixed')]}"/>
                        <field name="bxa_gyb_discount_percentage_price" class="oe_inline" attrs="{'invisible':[('bxa_gyb_discount_base_on', '!=', 'percentage')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
