<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_pricelist_item_extend_tree_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree.extend</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="variant_id" groups="product.group_product_variant"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_item_extend_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form.extend</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='applied_on']/parent::group" position="inside">
                    <field name="variant_id" attrs="{'invisible':[('applied_on', '!=', '02_variant_value')],'required':[('applied_on', '=', '02_variant_value')]}"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_item_bogo_offer_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.bogo_offer</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <group col="2" attrs="{'invisible':[('compute_price', '!=', 'bogo_sale')]}">
                        <field name="bogo_base" colspan="2" string="bogo base on" />
                    </group>
                    <group attrs="{'invisible':['|',('bogo_base', '!=', 'bxa_gya_free'),('compute_price', '!=', 'bogo_sale')]}">
                        <field name="bxa_gya_free_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gya_free_Bproduct_unit" class="oe_inline" />
                    </group>
                    <group attrs="{'invisible':['|',('bogo_base', '!=', 'bxa_gyb_free'),('compute_price', '!=', 'bogo_sale')]}">
                        <field name="bxa_gyb_free_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_free_products" class="oe_inline" />
                        <field name="bxa_gyb_free_Bproduct_unit" class="oe_inline"/>
                    </group>
                    <group attrs="{'invisible':['|',('bogo_base', '!=', 'bxa_gyb_discount'),('compute_price', '!=', 'bogo_sale')]}">
                        <field name="bxa_gyb_discount_Aproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_discount_product" class="oe_inline" />
                        <field name="bxa_gyb_discount_Bproduct_unit" class="oe_inline" />
                        <field name="bxa_gyb_discount_base_on" class="oe_inline" />
                        <field name="bxa_gyb_discount_fixed_price" class="oe_inline" attrs="{'invisible':[('bxa_gyb_discount_base_on', '!=', 'fixed')]}"/>
                        <field name="bxa_gyb_discount_percentage_price" class="oe_inline" attrs="{'invisible':[('bxa_gyb_discount_base_on', '!=', 'percentage')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_pormotion_rule_view" model="ir.ui.view">
            <field name="name">product.pricelist.promotion.rule.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@groups='product.group_pricelist_item']" position="after">
                    <group string="Promotion Rule Items" name="promotion_rule">
                        <!-- <separator /> -->
                        <field name="sale_promotion_ids">
                            <tree string="Pricelist Items">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <!-- <field name="date_start"/>
                                <field name="date_end"/> -->
                                <field name="base_on" />
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
