<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pos_order_tree" model="ir.ui.view">
        <field name="name">pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="list_price_amount" sum="List Total"/>
                <field name="sale_qty" sum="Total Qty"/>
            </xpath>

        </field>
    </record>


    <record id="view_report_pos_order_pivot" model="ir.ui.view">
        <field name="name">report.pos.order.pivot</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_total']" position="after">
                <field name="included_tax_total" type="measure"/>
                <field name="order_count" type="measure"/>
            </xpath>
        </field>
    </record>


    <record id="view_report_pos_order_2_pivot" model="ir.ui.view">
        <field name="name">report.pos.order.pivot</field>
        <field name="model">report.pos.order2</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="order_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="qty" type="measure"/>
            </pivot>

        </field>
    </record>

    <record id="view_pos_config_tree" model="ir.ui.view">
        <field name="name">pos.config.tree.view</field>
        <field name="model">pos.config</field>
        <field name="arch" type="xml">
            <tree string="Point of Sale Configuration">
                <field name="name" />
                <field name="performance"/>
            </tree>
        </field>
    </record>


    <record id="action_report_pos_order2" model="ir.actions.act_window">
        <field name="name">Orders Analysis</field>
        <field name="res_model">report.pos.order2</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="action_report_pos" model="ir.actions.act_window">
        <field name="name">Pos Analysis</field>
        <field name="res_model">pos.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dobtor_pos_report.view_pos_config_tree"/>
    </record>



    <menuitem id="menu_report_pos_order_2" name="Orders Report" action="action_report_pos_order2" parent="point_of_sale.menu_point_rep" sequence="3"/>
    <menuitem id="menu_report_pos" name="Pos Report" action="action_report_pos" parent="point_of_sale.menu_point_rep" />

</odoo>
